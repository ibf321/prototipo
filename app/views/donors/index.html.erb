<%- model_class = Donor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:situation) %></th>
      <th><%= model_class.human_attribute_name(:social_name) %></th>
      <th><%= model_class.human_attribute_name(:fantasy_name) %></th>
      <th><%= model_class.human_attribute_name(:type_doner) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @donors.each do |donor| %>
      <tr>
        <td><%= link_to donor.id, donor_path(donor) %></td>
        <td><%= donor.situation %></td>
        <td><%= donor.social_name %></td>
        <td><%= donor.fantasy_name %></td>
        <td><%= donor.type_doner %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      donor_path(donor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_donor_path(donor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      donor_path(donor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_donor_path,
            :class => 'btn btn-primary' %>
